<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:ignore="ScrollViewSize,UselessLeaf">

    <androidx.cardview.widget.CardView
        android:id="@+id/project1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:elevation="20sp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,UnusedAttribute">

        <LinearLayout
            android:id="@+id/cardLayoutVertical"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="5dp">

            <ImageView
                android:id="@+id/projectBackground"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:visibility="visible"
                tools:ignore="ContentDescription" />
            <!--            android:background="@drawable/project_background1"-->

            <LinearLayout
                android:id="@+id/projectDetailLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                tools:ignore="InefficientWeight,RtlHardcoded,RtlSymmetry">

                <TextView
                    android:id="@+id/projectName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_deca"
                    android:gravity="left"
                    android:text="Tiki Mobile App Project"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,TooDeepLayout" />

                <TextView
                    android:id="@+id/projectDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_deca"
                    android:gravity="left"
                    android:paddingTop="5dp"
                    android:text="UI Kit Design Project - Dec 20,2024"
                    android:textColor="@color/light_black"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/gradient_blue"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/projectProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lexend_deca"
                        android:text="80"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        tools:ignore="HardcodedText,RtlHardcoded" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lexend_deca"
                        android:text=" / 100"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        tools:ignore="HardcodedText,RtlHardcoded" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/projectProgressBar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="15dp"
                    android:progress="80"
                    android:progressTint="@color/lightdim_blue"
                    tools:ignore="UnusedAttribute" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>